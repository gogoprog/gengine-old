#!/usr/bin/bash

if [[ ${SHELL} == "/bin/bash" ]]; then
	SRC=${BASH_SOURCE}
else
	SRC=$0
fi

BIN_DIR=$(dirname $(readlink -e ${SRC}))
BASEDIR=${BIN_DIR%/*}

export PATH=${PATH}:${BASEDIR}/bin
export GENGINE=${BASEDIR}

if [[ "$0" == "bash" ]]; then
    export PS1="[gengine]${PS1}"
else
    export PROMPT="[gengine]${PROMPT}"
fi

echo "[gengine] Enabled with ${GENGINE}"
